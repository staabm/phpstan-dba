includes:
	- stubFiles.neon
	- extensions.neon

services:
	-
		class: staabm\PHPStanDba\Rules\SyntaxErrorInQueryMethodRule
		tags: [phpstan.rules.rule]
		arguments:
			classMethods:
				- 'PDO::query#0'
				- 'PDO::prepare#0'
				- 'mysqli::query#0'

	-
		class: staabm\PHPStanDba\Rules\SyntaxErrorInQueryFunctionRule
		tags: [phpstan.rules.rule]
		arguments:
			functionNames:
				- 'Deployer\runMysqlQuery#0'
				- 'mysqli_query#1'
