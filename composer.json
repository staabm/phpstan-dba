{
	"name": "staabm/phpstan-dba",
	"type": "phpstan-extension",
	"license": "MIT",
	"require": {
		"php": "^8.0",
		"ext-mysqli": "*",
		"phpstan/phpstan": "1.3.*"
	},
	"require-dev": {
		"ext-pdo": "*",
		"doctrine/dbal": "^3.2",
		"friendsofphp/php-cs-fixer": "3.4.0",
		"phpstan/phpstan-php-parser": "^1.1",
		"phpstan/phpstan-phpunit": "^1.0",
		"phpstan/phpstan-strict-rules": "^1.1",
		"phpunit/phpunit": "^9",
		"symplify/phpstan-extensions": "^10.0"
	},
	"autoload": {
		"psr-4": {
			"staabm\\PHPStanDba\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"staabm\\PHPStanDba\\Tests\\Fixture\\": "tests/Fixture/",
			"staabm\\PHPStanDba\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"csfix": [
			"php-cs-fixer fix"
		],
		"phpstan-dba-baseline": [
			"phpunit",
			"phpstan analyse -c phpstan.neon.dist"
		],
		"phpstan": [
			"phpstan analyse -c phpstan.neon.dist"
		],
		"phpunit": [
			"phpunit"
		]
	},
	"config": {
		"sort-packages": true
	},
	"extra": {
		"phpstan": {
			"includes": [
				"config/dba.neon"
			]
		}
	}
}
