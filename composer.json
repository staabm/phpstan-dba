{
	"name": "staabm/phpstan-dba",
	"type": "phpstan-extension",
	"license": "MIT",
	"require": {
		"php": "^8.0",
		"ext-mysqli": "*",
		"phpstan/phpstan": "^1.2"
	},
	"require-dev": {
		"ext-pdo": "*",
		"friendsofphp/php-cs-fixer": "3.4.0",
		"phpstan/phpstan-php-parser": "^1.1",
		"phpstan/phpstan-phpunit": "^1.0",
		"phpstan/phpstan-strict-rules": "^1.1",
		"phpunit/phpunit": "^9",
		"symplify/phpstan-extensions": "^10.0"
	},
	"autoload": {
		"psr-4": {
			"staabm\\PHPStanDba\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"staabm\\PHPStanDba\\tests\\": "tests/"
		}
	},
	"scripts": {
		"csfix": [
			"php-cs-fixer fix"
		],
		"phpstan-dba-baseline": [
			"phpstan analyse -c phpstan.neon.dist --debug"
		],
		"phpstan": [
			"phpstan analyse -c phpstan.neon.dist --debug"
		],
		"phpunit": [
			"phpunit"
		]
	},
	"config": {
		"sort-packages": true
	},
	"extra": {
		"phpstan": {
			"includes": [
				"config/dba.neon"
			]
		}
	}
}
